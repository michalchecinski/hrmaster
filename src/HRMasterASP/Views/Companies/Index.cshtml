@model IEnumerable<HRMasterASP.Models.Company>

<div class="row page-box">
    <div class="col-sm-12">
        <h2>Companies list</h2>

        @using (Html.BeginForm("Index", "Companies", FormMethod.Get))
        {
            <div class="input-group col-md-12" style="margin-bottom: 14px">
                <input type="text" class="form-control" placeholder="Search by company title.."
                       name="search" id="search" />
                <span class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        }
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.OrderBy(o => o.Name))
                {
                    <tr>
                        <td>@Html.ActionLink(company.Name, "Details", new { id = company.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Create company", "Create", "Companies", null, new { @class = "btn btn-primary" })
    </div>
</div>
